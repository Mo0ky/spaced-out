<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="SpacedOut Menu - Ace Subido" />
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Spaced Out Menu by Ace Subido" %></title>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32915822-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>

    <%= stylesheet_link_tag "screen" %>
    <%= stylesheet_link_tag "spaced-out" %>
    <%= javascript_include_tag  "spaced-out" %>
  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
  </body>
  <script>
    SpacedOutMenu.install();
  </script>
</html>
